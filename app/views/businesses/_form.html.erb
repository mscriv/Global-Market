<%= form_for @business, :html => { :multipart => true } do |f| %>
    <% if @business.errors.any? %>
        <div id="error_explanation" class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <h4><%= pluralize(@business.errors.count, "error") %> prohibited this listing from being saved:</h4>

          <ul>
            <% @business.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :category_id %><br />
      <%= f.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %>
    </div>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :address %><br>
      <%= f.text_area :address, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :phone %><br>
      <%= f.text_field :phone, class: "form-control" %>
    </div>

    </div>
    <div class="form-group">
      <%= f.label :website %><br>
      <%= f.text_field :website, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit class: "btn btn-primary" %>
    </div>
<% end %>
